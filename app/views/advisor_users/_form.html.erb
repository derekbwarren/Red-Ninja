<%= form_for(@advisor_user) do |f| %>
  <% if @advisor_user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@advisor_user.errors.count, "error") %> prohibited this advisor_user from being saved:</h2>

      <ul>
      <% @advisor_user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username %>(Email)<br>
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :school_name %><br>
    <%= f.text_field :school_name %>
  </div>
  <div class="field">
    <%= f.label :school_level %><br>
    <%= f.select :school_level, options_for_select(%w[Elementary Middle High]) %> School
  </div>
  <div class="field">
    Will you be paying for all of your students? Choose "Y" for yes, "N" for no<br>
    <%= f.select :pay_code, options_for_select(%w[Y N]) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
